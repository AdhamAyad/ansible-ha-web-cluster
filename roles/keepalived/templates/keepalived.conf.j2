global_defs {
    router_id {{ ansible_hostname }}
}

vrrp_instance VI_1 {
    state {{ vrrp_role }}
    interface {{ ansible_default_ipv4.interface }}
    virtual_router_id 51
    priority {{ vrrp_priority }}
    
    advert_int 1

    authentication {
        auth_type PASS
        auth_pass 1234
    }

    virtual_ipaddress {
        {{ virtual_ip }}
    }
}