global
    log 127.0.0.1 local2
    maxconn 4000
    user haproxy
    group haproxy
    daemon

defaults
    mode http
    log global
    option httplog
    timeout connect 10s
    timeout client 1m
    timeout server 1m

frontend main_http
    bind *:80
    default_backend app_servers

backend app_servers
    balance roundrobin
    {% for host in groups['final'] %}
    server {{ host }} {{ host }}:{{ haproxy_backend_port }} check
    {% endfor %}
